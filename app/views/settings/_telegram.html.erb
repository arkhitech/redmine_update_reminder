<h3><%= t 'intouch.settings.telegram.groups' %></h3>

<table class="list">
  <tbody>
  <% for telegram_group in TelegramGroupChat.all %>
    <tr class="<%= cycle("odd", "even") %>">
      <td class="name">
        <%= telegram_group.title %>
      </td>

      <td class="buttons">
        <%= delete_link telegram_group_path(telegram_group) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
