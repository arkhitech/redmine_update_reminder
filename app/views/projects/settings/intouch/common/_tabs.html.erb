<div class="intouch-tabs">
  <ul>
    <% tabs.each do |tab| -%>
      <li><%= link_to l(tab[:label]), "#{tab[:name]}",
                      id: "intouch-tab-#{tab[:name]}",
                      class: (tab[:name] != selected_tab ? 'intouch-tab' : 'intouch-tab selected'),
                      onclick: "showIntouchTab('#{tab[:name]}'); this.blur(); return false;" %></li>
    <% end -%>
  </ul>
  <div class="tabs-buttons" style="display:none;">
    <button class="tab-left" type="button" onclick="moveIntouchTabLeft(this);"></button>
    <button class="tab-right" type="button" onclick="moveIntouchTabRight(this);"></button>
  </div>
</div>
<% tabs.each do |tab| -%>
  <%= content_tag('div', render(partial: tab[:partial], locals: {tab: tab, settings_source: settings_source}),
                  id: "intouch-tab-content-#{tab[:name]}",
                  style: (tab[:name] != selected_tab ? 'display:none' : nil),
                  class: 'intouch-tab-content') %>
<% end -%>
